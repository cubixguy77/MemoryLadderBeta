<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentMemoryContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/viewgroup_toolbar">
    </include>

    <timer.TimerView
        android:id="@+id/timerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="@dimen/timer.textSize"
        tools:text="05:31"
    />


    <memorization.NumberGridView
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/number_grid.layout_margin"
        android:numColumns="6"
        android:layout_weight="1"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="@dimen/number_grid.verticalSpacing"
        android:gravity="center"
        tools:listitem="Cell"
    />

    <ImageButton
        android:id="@+id/nextGroupButton"
        android:layout_width="@dimen/next_group_button.layout_width"
        android:layout_height="@dimen/next_group_button.layout_height"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/next_group_button.layout_margin"
        android:background="@drawable/shape_rounded_corners"
        android:stateListAnimator="@animator/button_elevation"
        app:srcCompat="@drawable/ic_arrow_right"
        android:text="go"
        android:elevation="2dp"
    />

    <include
        android:id="@+id/keyboard_layout"
        layout="@layout/viewgroup_numeric_keyboard">
    </include>


</LinearLayout>