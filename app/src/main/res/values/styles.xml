<resources
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="cardStyle">@style/CardStyle</item>
    </style>

    <style name="CardStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">2dp</item>
    </style>

    <style name="PlayButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="colorControlHighlight">@color/colorAccent</item>
        <item name="colorButtonNormal">#76ff03</item>
    </style>

</resources>
