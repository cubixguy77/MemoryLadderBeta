<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentMemoryContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <timer.TimerView
        android:id="@+id/timerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        tools:text="05:31"
    />


    <memorization.NumberGridView
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:numColumns="6"
        android:layout_weight="1"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="50dp"
        android:gravity="center"
        tools:listitem="Cell"
    />

    <ImageButton
        android:id="@+id/nextGroupButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/shape_rounded_corners"
        app:srcCompat="@drawable/ic_arrow_right"
        android:text="go"
        android:elevation="4dp"
    />

    <LinearLayout
        android:id="@+id/floatingRecallMenu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:visibility="gone"
        tools:visibility="visible">

        <Button
            android:id="@+id/nextRowButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Next Row"
            />

        <Button
            android:id="@+id/submitRowButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Submit Row"
            />

    </LinearLayout>


</LinearLayout>