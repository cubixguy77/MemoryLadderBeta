<?xml version="1.0" encoding="utf-8"?>

<merge
    android:id="@+id/challengeCard"
    style="@style/CardStyle"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/vertContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <TextView
                android:id="@+id/challengeText"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="5"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:gravity="center_vertical"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:textStyle="bold"
                android:textSize="40sp"
                android:text="10 Digits"
                />

            <ImageView
                android:id="@+id/expandContractButton"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                app:srcCompat="@drawable/ic_arrow_down"/>
        </LinearLayout>

        <speednumbers.mastersofmemory.challenges.presentation.views.DigitsPerGroupView
            android:id="@+id/digitGroupingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible">
        </speednumbers.mastersofmemory.challenges.presentation.views.DigitsPerGroupView>

        <speednumbers.mastersofmemory.challenges.presentation.views.MemTimerSettingView
            android:id="@+id/memorizationTimerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible">
        </speednumbers.mastersofmemory.challenges.presentation.views.MemTimerSettingView>

        <LinearLayout
            android:id="@+id/challengeCardBottomActionContainer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            tools:visibility="visible"
            >

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_delete"
                />

            <Button
                android:id="@+id/playButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="20sp"
                android:theme="@style/PlayButton"
                android:text="@string/play"
                style="@style/Widget.AppCompat.Button.Borderless"
                />

        </LinearLayout>
    </LinearLayout>

</merge>
