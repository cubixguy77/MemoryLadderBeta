<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentFinalScoreCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/recallNumberCorrect"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_weight="1"
        android:textSize="200sp"
        android:textScaleX=".5"
        android:includeFontPadding="false"
        android:gravity="bottom|left"
        tools:text="38"
        android:paddingLeft="16dp"
        android:textStyle="normal|bold"
        app:layout_constraintLeft_toLeftOf="@+id/finalScoreLabel"
        app:layout_constraintTop_toBottomOf="@+id/finalScoreLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingLeft="16dp"
        tools:text="Digits Recalled"
        android:id="@+id/textView3"
        app:layout_constraintLeft_toLeftOf="@+id/recallNumberCorrect"
        app:layout_constraintTop_toBottomOf="@+id/textView9"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/finalScoreLabel"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        tools:text="Final Score"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/parentFinalScoreCard"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/parentFinalScoreCard"
        android:layout_marginTop="16dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/icon_recall"
        android:id="@+id/imageView"
        app:layout_constraintLeft_toRightOf="@+id/digitsAttempted"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/finalScoreLabel" />

    <TextView
        android:id="@+id/digitsAttempted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="/ 40 Digits"
        app:layout_constraintLeft_toRightOf="@+id/recallNumberCorrect"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7" />

    <TextView
        android:id="@+id/percentRecalled"
        tools:text="90%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="8dp" />

    <TextView
        tools:text="Accuracy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        app:layout_constraintLeft_toRightOf="@+id/imageView"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/icon_clock"
        android:id="@+id/imageView2"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginTop="24dp" />


    <TextView
        android:id="@+id/memTime"
        tools:text="37sec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        tools:text="Mem Time"
        app:layout_constraintLeft_toLeftOf="@+id/memTime"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginBottom="8dp" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/icon_speed"
        android:id="@+id/imageView7"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginTop="24dp" />

    <TextView
        android:id="@+id/digitSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="22digits"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        android:layout_marginTop="8dp" />

    <TextView
        tools:text="90%"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        tools:text="Per Min"
        app:layout_constraintLeft_toRightOf="@+id/imageView7"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        android:layout_marginBottom="8dp" />

</android.support.constraint.ConstraintLayout>