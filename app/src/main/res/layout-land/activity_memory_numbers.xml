<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentMemoryContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/tool_bar"
        layout="@layout/viewgroup_toolbar">
    </include>

    <timer.TimerView
        android:id="@+id/timerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        tools:text="05:31"
    />


    <memorization.NumberGridView
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:numColumns="6"
        android:layout_weight="1"
        android:stretchMode="columnWidth"
        android:horizontalSpacing="0dp"
        android:verticalSpacing="50dp"
        android:gravity="center"
        tools:listitem="Cell"
    />

    <ImageButton
        android:id="@+id/nextGroupButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="@drawable/shape_rounded_corners"
        android:stateListAnimator="@animator/button_elevation"
        app:srcCompat="@drawable/ic_arrow_right"
        android:text="go"
        android:elevation="2dp"
    />

    <TableLayout
        android:id="@+id/keyboard_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/backSpaceButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_backspace"
                android:background="@color/highlightRecallActions"
                android:text="BackSpace" />

            <ImageButton
                android:id="@+id/nextRowButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_next_row"
                android:background="@color/highlightRecallActions"
                android:text="Next Row"
                />

            <ImageButton
                android:id="@+id/submitRowButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/icon_check_black"
                android:background="@color/highlightRecallActions"
                android:text="Submit Row"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/highlightRecallDigits"
                android:id="@+id/key_1" />
            <Button
                android:text="2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/highlightRecallDigits"
                android:id="@+id/key_2" />
            <Button
                android:text="3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/highlightRecallDigits"
                android:id="@+id/key_3" />
            <Button
                android:text="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/highlightRecallDigits"
                android:id="@+id/key_4" />
            <Button
                android:text="5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/highlightRecallDigits"
                android:id="@+id/key_5" />


        <Button
            android:text="6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/highlightRecallDigits"
            android:id="@+id/key_6" />
        <Button
            android:text="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/highlightRecallDigits"
            android:id="@+id/key_7" />
        <Button
            android:text="8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/highlightRecallDigits"
            android:id="@+id/key_8" />
        <Button
            android:text="9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/highlightRecallDigits"
            android:id="@+id/key_9" />
        <Button
            android:text="0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/highlightRecallDigits"
            android:id="@+id/key_0" />
        </TableRow>

    </TableLayout>


</LinearLayout>